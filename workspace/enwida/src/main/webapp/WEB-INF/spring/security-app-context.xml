<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                    http://www.springframework.org/schema/security 
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">
  
<authentication-manager>
	   <authentication-provider>
		<jdbc-user-service data-source-ref="dataSource"
 
		   users-by-username-query="
		      select user_name,user_password, enabled 
		      from users.users where user_name=?" 
 
		   authorities-by-username-query="     
				SELECT users.user_name, roles.role_name FROM users.users
	    		 INNER JOIN users.user_group ON user_group.user_id=users.user_id 
	    		 INNER JOIN users.group_role ON group_role.group_id=user_group.group_id
	    		 INNER JOIN users.roles ON roles.role_ID=group_role.role_id
	    		 WHERE user_name=?" 
 
		/>
	   </authentication-provider>
	</authentication-manager>
	
	 <beans:bean id="loginSuccessHandler" class="de.enwida.web.controller.LoginSuccessHandler">
		 <beans:property name="defaultTargetUrl" value="/user/  "/>
	 </beans:bean>
	

    <http use-expressions="true" auto-config="true" >
<!--  		<intercept-url pattern="/dashboard" access="hasRole('ROLE USER')"/> -->
	    <intercept-url pattern="/" access="permitAll" />
	    <intercept-url pattern="/*" access="permitAll" />
	    <intercept-url pattern="/j_spring_security_check" access="hasRole('ROLE USER')"/>
<!-- 	    <intercept-url pattern="/user/admin/*" access="hasRole('admin')" /> -->
	    
	    <form-login  login-page="/login.html"  authentication-failure-url="/user/loginFailed" login-processing-url="/j_spring_security_check"  authentication-success-handler-ref="loginSuccessHandler"/>        
	    <logout logout-success-url="/" logout-url="/j_spring_security_logout" />
	    <access-denied-handler error-page="/403.html"/>
    </http>
</beans:beans>   