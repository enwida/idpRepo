<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${db.driver}" />
		<property name="url" value="${db1.url}" />
		<property name="username" value="${db.user}" />
		<property name="password" value="${db.pw}" />
	</bean>

	<bean id="isoDateFormat" class="java.text.SimpleDateFormat">
		<constructor-arg value="yyyy-MM-dd" />
	</bean>

	<bean id="userDao" class="de.enwida.web.dao.implementation.UserDaoImpl">
	</bean>
	<bean id="roleDao" class="de.enwida.web.dao.implementation.RoleDaoImpl">
	</bean>
	<bean id="groupDao" class="de.enwida.web.dao.implementation.GroupDaoImpl">
	</bean>
	<bean id="rightDao" class="de.enwida.web.dao.implementation.RightDaoImpl">
	</bean>
	<bean id="dataAvailibilityDao" class="de.enwida.web.dao.implementation.DataAvailibilityDaoImpl">
	</bean>

    <bean scope="singleton" id="userService" class="de.enwida.web.service.implementation.UserServiceImpl">
    </bean>
    <bean scope="singleton" id="securityService" class="de.enwida.web.service.implementation.SecurityServiceImpl">
    </bean>
    <bean scope="singleton" id="availabilityService" class="de.enwida.web.service.implementation.AvailibilityServiceImpl">
    </bean>
    <bean scope="singleton" id="objectMapperFactory" class="de.enwida.web.utils.ObjectMapperFactory">
    	<constructor-arg ref="isoDateFormat" />
    </bean>
    <bean scope="singleton" id="chartNavigationLocalizer" class="de.enwida.web.utils.ChartNavigationLocalizer">
    </bean>
	<bean scope="singleton" id="navigationService" class="de.enwida.web.service.implementation.NavigationServiceImpl">
		<constructor-arg>
			<value>${ENWIDA_HOME}/conf/navigation</value>
		</constructor-arg>
	</bean>
	
	<bean id="mailService" class="de.enwida.web.service.implementation.MailServiceImpl">
	     <property name="starttls" value="${mail.smtp.starttls.enable}"/>
	     <property name="host" value="${mail.smtp.host}"/>
	     <property name="user" value="${mail.smtp.user}"/>
	     <property name="port" value="${mail.smtp.port"/>
	     <property name="auth" value="${mail.smtp.auth}"/>
	     <property name="password" value="${mail.smtp.password}"/>
	</bean>
	
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>file:${ENWIDA_HOME}/conf/enwida.config</value>
			</list>
		</property>
	</bean>	
	
</beans>
